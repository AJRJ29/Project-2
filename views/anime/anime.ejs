<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
          <img src="<%= anime[0].image_url %>" alt="">
        <div class="card-content white-text">    
            <h2><%= anime[0].type %></h2>
          <span class="card-title"><h2><%= anime[0].title %></h2></span>
          <p><%= anime[0].synopsis %></p>
        </div>
        <div class="card-action">
            <form method="GET" action="/anime">
                <input hidden type="text" name="name" value="<%= anime[0].title %>">
                <button class="btn btn-primary" type="submit">Bookmark</button>
            </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input id="input_text" type="text" data-length="10">
          <label for="input_text">Input text</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea2" class="materialize-textarea" data-length="120"></textarea>
          <label for="textarea2">Textarea</label>
        </div>
      </div>
    </form>
  </div>